@page
@model LoginModel


<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #F69D36;
    @*background-image:linear-gradient(315deg,#045de90%,#09c6f974%);*@
    }

    h2 {
        text-align: center
    }

    .container {
        display: flex;
        flex-direction: column;
    }

    .center {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        background: white;
        border-radius: 10px;
        padding: 10px;
        transition: top 0.3s ease, font-size 0.3s ease;
        box-shadow: 0 20px 20px rgba(0, 0, 0, 0.2);
    }

    .google {
        position: absolute;
        top: 80%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 400px;
        background: white;
        border-radius: 10px;
        padding: 10px;
        transition: top 0.3s ease, font-size 0.3s ease;
        box-shadow: 0 20px 20px rgba(0, 0, 0, 0.2);
    }

    .text_field {
        position: relative;
        border-bottom: 2px solid #adadad;
        margin: 30px 0;
        transition-delay: 1s;
    }

    .text_field input {
        transition-delay: 1s;
    }

    .text_field label {
        transition-delay: 1s;
    }

    .upper-bar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 50px;
        /* Adjust the height as needed */
        background-color: #045de9;
        background-image: linear-gradient(315deg, #045de9 0%, #09c6f9 74%);
        /* Adjust the color as needed */
        z-index: 9999;
        /* Ensure the bar is on top of other elements */
    }

    .bottom-bar {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 50px;
        /* Adjust the height as needed */
        background-color: #045de9;
        background-image: linear-gradient(315deg, #045de9 0%, #09c6f9 74%);

        z-index: 9999;
        /* Ensure the bar is on top of other elements */
    }

    .my-button {
        background-color: #262323;
    @*background-image:linear-gradient(315deg,#045de90%,#09c6f974%);*@color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 10px;
        width: 100%;
    }

    img {
        width: 100%;
        height: auto;
        border: 1px solid #ccc;
    }
</style>

@{
    ViewData["Title"] = "";
}

<body>
    @* <div class="upper-bar"></div> *@
    <h1 class="text-center">@ViewData["Title"]</h1>
    @* <img src="InventoryManagementSystem\wwwroot\images\logo\logo.png"> *@
    <div class="container">
        <div class="row">
            <div class="col-md-4 ">
                <section class="center">
                    <form id="account" method="post">
                        <div style="display:flex; justify-content: center">
                            <img class="me-2" src="~/images/logo/logo1.png"
                                style="width:350px; margin:0 !important;border:none;">
                        </div>
                        <hr />
                        <h2>Login</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3 text_field">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username"
                                aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                                aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="row">
                            <div class="col-12 mb-2">
                                <button id="login-submit" type="submit" class="my-button">Log in</button>
                            </div>
                        </div>
                    </form>
                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div style="visibility: hidden;">
                                <p>
                                    There are no external authentication services configured. See this <a
                                        href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                                        about setting up this ASP.NET application to support logging in via external
                                        services</a>.
                                </p>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"
                                method="post" class="col-12">
                                <div>
                                    <p class="ml-4">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="my-button d-flex justify-content-center" name="provider"
                                                value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                <img src="/assets/ic_google.png" class="align-self-center"
                                                    style="width: 24px !important; height: 24px !important; margin-right: .5rem; border: none !important">
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </p>
                                </div>
                            </form>
                        }
                    }
                    <div class="row">
                        <p class="col-12 mt-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Not a member? Sign up
                                now!</a>
                        </p>
                    </div>
                </section>
            </div>
            @* <div class="row">
            <div class="col-md-6 col-md-offset-2">
            <section>

            </section>
            </div>
            </div> *@
        </div>
    </div>
    @* <div class="bottom-bar"></div> *@
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
