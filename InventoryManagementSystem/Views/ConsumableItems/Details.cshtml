@model InventoryManagementSystem.Models.ConsumedItem

@{
    ViewData["Title"] = "Details";
}
<div class="container-fluid">
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#0">Items</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewBag.Title
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="card-style mb-30 row">
        <div class="input-style-1 mb-2 col-4">
            <label>Item Code</label>
            <input value="@Model.ItemConsumable?.KodeItemConsumable" placeholder="Kode Item" readonly />
        </div>
        <div class="input-style-1 mb-2 col-4">
            <label>User Email</label>
            <input value="@Model.User?.Email" placeholder="User" readonly />
        </div>
        <div class="input-style-1 mb-2 col-4">
            <label asp-for="CreateAt">Created at</label>
            <input value="@Model.CreateAt" placeholder="Created at" readonly />
        </div>
        <div class="input-style-1 mb-2 col-4">
            <label asp-for="ConsumedDate">Approved Consumed Date</label>
            <input value="@Model.ConsumedDate" placeholder="Consumed Date" readonly />
        </div>
        @* <div class="input-style-1 mb-2 col-4">
            <label>Approved Due Date</label>
            <input value="@Model.DueDate" placeholder="Due Date" readonly />
        </div> *@
        <div class="input-style-1 mb-2 col-4">
            <label>Pick Up Note</label>
            <input value="@Model.NoteConsumed" placeholder="Note" readonly />
        </div>
        <div class="input-style-1 col-4 mb-4 mt-4 col-12">
            <label class="mb-2 control-label">Preview Image</label><br>
            <img id="pictureOutput" src="~/uploads/@Model.ItemConsumable?.PicturePath" alt="" style="width: 200px;" />
        </div>
        <div class="input-style-1 mb-2 col-4">
            <label>Status</label>
            <input value="@Model.Status" placeholder="Status" readonly />
        </div>
    </div>
</div>