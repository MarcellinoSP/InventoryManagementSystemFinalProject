@model InventoryManagementSystem.Models.BorrowedItem

@{
    ViewData["Title"] = "Edit";
}

</style>
<div class="container-fluid">
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#0">Daftar Borrowed Item</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewBag.Title
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="card-style mb-30 row">
            <div class="input-style-1 mb-2 col-4 d-none">
                <label asp-for="BorrowedId"></label>
                <input type="hidden" asp-for="BorrowedId" />
                <span asp-validation-for="BorrowedId" class="text-danger"></span>
            </div>

            <div class="input-style-1 mb-2 col-4">
                <label asp-for="ItemId">Item ID</label>
                <input asp-for="ItemId" placeholder="ItemId" readonly />
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>

            <div class="input-style-1 mb-2 col-4">
                <label>User Email</label>
                <input value="@Model.User.Email" placeholder="NamaItem" readonly />
                <input type="hidden" asp-for="UserId" placeholder="ItemId" />
            </div>

            <div class="input-style-1 mb-2 col-4">
                <label asp-for="CreateAt">Create At</label>
                <input asp-for="CreateAt" placeholder="CreateAt" readonly />
                <span asp-validation-for="CreateAt" class="text-danger"></span>
            </div>

            <div class="input-style-1 mb-2 col-4">
                <label asp-for="DueDate">Lost Date</label>
                <input asp-for="DueDate" placeholder="Lost Date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="input-style-1 mb-2 col-4">
                <label asp-for="NoteBorrowed">Note Borrowed</label>
                <input asp-for="NoteBorrowed" placeholder="Note Borrowed" />
                <span asp-validation-for="NoteBorrowed" class="text-danger"></span>
            </div>

            <div class="input-style-1 mb-2 col-4">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="DoneBorrowing">Done Borrowing</option>
                    <option value="DoneAndLost">Lost</option>
                    <option value="DoneAndBroken">Broken</option>
                    <option value="StillBorrowed">Borrowed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="main-btn success-btn rounde-sm btn-hover" />
            </div>
            <div class="col-12 mt-2 d-flex gap-2">
                <a asp-action="Index" type="button" class="main-btn primary-btn rounde-sm btn-hover">Back To List</a>
            </div>
        </div>
    </form>

    <form asp-controller="LostEmail" asp-action="SendEmail" method="post">
        <fieldset>
            <legend>Send Email</legend>
            <div class="card-style mb-30 row">
                <div class="form-group">
                    @* <label for="recipient">Recipient:</label> *@
                    <input type="hidden" class="form-control" id="recipient" name="recipient" value="@Model.User.Email"
                        required>
                </div>
                <div class="form-group">
                    <label for="subject">Subject:</label>
                    <input type="text" class="form-control" id="subject" name="subject" required>
                </div>
                <div class="form-group">
                    <label for="body">Message Lost Mail:</label>
                    <textarea class="form-control" id="body" name="body" rows="5" required></textarea>
                </div>
                <div class="form-group">
                    <label for="attachment">Attachment:</label>
                    <div class="custom-file">
                        <input type="file" class="form-control-input" id="attachment" name="attachment"
                            style="border: 1px solid #ced4da;">
                    </div>
                </div>
                <div class="mt-2 d-flex gap-2">
                    <button type="submit" class="main-btn primary-btn rounde-s">Send Email</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>