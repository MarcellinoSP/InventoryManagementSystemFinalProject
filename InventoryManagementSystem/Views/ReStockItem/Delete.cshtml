@model InventoryManagementSystem.Models.ReStockItem

@{
    ViewData["Title"] = "Cancelation";
}

<div class="container-fluid">
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#0">Request Consumable Item</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                Cancel Order
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="card-style mb-row 30">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ItemConsumable)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ItemConsumable.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RequestStockDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RequestStockDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Status)
            </dd>

            <form asp-action="Delete">
                <div class="col-12 mt-10 d-flex gap-2">
                    <input type="hidden" asp-for="ReStockID" />
                    <input type="submit" value="Cancel" class="main-btn btn-danger rounde-sm" />
                </div>
                <div class="col-12 mt-10 d-flex gap-2">
                    <a asp-action="Index" class="main-btn primary-btn rounde-sm btn-hover">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
