@model IEnumerable<InventoryManagementSystem.Models.ReStockItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemConsumable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KodeItemConsumable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestStockDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemConsumable.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KodeItemConsumable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestStockDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReStockID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReStockID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReStockID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
