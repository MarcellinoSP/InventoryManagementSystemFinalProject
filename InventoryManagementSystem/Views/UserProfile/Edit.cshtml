@model InventoryManagementSystem.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container-fluid">
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>@ViewBag.Title</h2>
                </div>
            </div>
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page">
                                @ViewBag.Title
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Edit">
        <div class="card-style mb-row 30">
            <div class="input-style-1 mb-2 col-4">
                <label asp-for="Email">User Email</label>
                <input asp-for="Email" placeholder="Email" readonly/>
            </div>
            <div class="input-style-1 mb-2 col-4">
                <label asp-for="IdEmployee">Employee ID</label>
                <input asp-for="IdEmployee" readonly/>
            </div>
            <div class="input-style-1 mb-2 col-4">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" placeholder="First Name" />
            </div>
            <div class="input-style-1 mb-2 col-4">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" placeholder="Last Name" />
            </div>
            <div class="input-style-1 mb-2 col-4">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" placeholder="Phone number" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="main-btn success-btn rounde-sm btn-hover" />
            </div>
            <div class="col-12 mt-10 d-flex gap-2">
                <a type="button" asp-action="Index" class="main-btn primary-btn rounde-sm btn-hover">Cancel</a>
            </div>
        </div>
    </form>
</div>
